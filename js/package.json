{
  "name": "jupyter-webrtc",
  "version": "0.6.0",
  "description": "WebRTC for Jupyter notebook/lab",
  "author": "Maarten Breddels",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/maartenbreddels/ipywebrtc.git"
  },
  "jupyterlab": {
    "extension": "src/labplugin",
    "webpackConfig": "webpack.config.lab3.js",
    "outputDir": "../share/jupyter/labextensions/jupyter-webrtc",
    "sharedPackages": {
      "@jupyter-widgets/base": {
        "bundled": false,
        "singleton": true
      }
    }
  },
  "keywords": [
    "jupyter",
    "widgets",
    "ipython",
    "ipywidgets"
  ],
  "scripts": {
    "build": "yarn build:labextension && yarn build:nbextension",
    "build:labextension": "jupyter labextension build .",
    "build:nbextension": "webpack --mode=production",
    "watch": "npm-run-all -p watch:*",
    "watch:nbextension": "webpack --watch --mode=development",
    "watch:labextension": "jupyter labextension watch .",
    "test": "tsc && copyfiles package.json test_js && karma start --single-run"
  },
  "devDependencies": {
    "@jupyter-widgets/controls": "^2 || ^3",
    "@jupyterlab/builder": "^4.0.0",
    "@jupyterlab/services": "^7.0.10",
    "@types/chai": "^4.1.4",
    "@types/expect.js": "^0.3.29",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^9.0.0",
    "arraybuffer-loader": "^1.0.6",
    "base64-image-loader": "^1.2.1",
    "chai": "^4.1.2",
    "copyfiles": "^2.4.1",
    "json-loader": "^0.5.4",
    "karma": "^5.0.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^5.0.0",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.4.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.3.0",
    "style-loader": "^0.13.1",
    "tslint": "^5.11.0",
    "typescript": "^5.3.3",
    "webpack": "^5",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@jupyter-widgets/base": "^1.5.0 || ^2 || ^3",
    "buffer": "^4.9.2",
    "html2canvas": "v1.0.0-alpha.12",
    "mqtt": "^2.11.0",
    "process": "^0.11.10",
    "underscore": "^1.8.3",
    "url": "^0.11.0",
    "util": "^0.12.3",
    "webrtc-adapter": "^4.2.2"
  },
  "files": [
    "dist/",
    "css/",
    "src/"
  ]
}
